<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".model.pointguess.PointGuessActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#f8d549"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/shape_pg_pop_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:text="海量题库，随机选择 。\n保证玩到三天三夜不重样！"
                    android:textColor="#87684d"
                    android:textSize="16sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="#ffe350"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <RadioGroup
                        android:id="@+id/v_select_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <RadioButton
                            android:id="@+id/v_time_60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:button="@null"
                            android:drawableBottom="@drawable/select_pg_check_bg"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="60s"
                            android:textColor="#a77037"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/v_time_90"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:button="@null"
                            android:checked="true"
                            android:drawableBottom="@drawable/select_pg_check_bg"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="90s"
                            android:textColor="#a77037"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/v_time_120"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:button="@null"
                            android:drawableBottom="@drawable/select_pg_check_bg"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="120s"
                            android:textColor="#a77037"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RadioGroup>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/v_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/ic_pg_bt"
                    android:gravity="center_horizontal"
                    android:paddingTop="6dp"
                    android:text="开始"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="15dp"
            android:src="@mipmap/ic_pg_logo" />
    </RelativeLayout>
</LinearLayout>