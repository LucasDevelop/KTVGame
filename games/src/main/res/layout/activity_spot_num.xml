<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".model.spot.SpotNumActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.heid.games.widget.AttractParticlesView
            android:id="@+id/v_attractView"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/v_start_view"
            android:layout_width="210dp"
            android:layout_height="270dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            app:cardBackgroundColor="#e9eaff"
            app:cardCornerRadius="35dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/v_start"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="67.5dp"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="false">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_spot_start_bt_bg" />
                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_spot_start_index" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="点击开始游戏"
                    android:textColor="#6b58ff"
                    android:textSize="17sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/v_num_view"
            android:layout_width="210dp"
            android:layout_height="270dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:visibility="gone"
            app:cardBackgroundColor="#e9eaff"
            app:cardCornerRadius="35dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_spot_line"
                android:padding="15dp">

                <TextView
                    android:id="@+id/v_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:text="1"
                    android:textColor="#6b58ff"
                    android:textSize="90sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/v_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v_num"
                    android:layout_centerHorizontal="true"
                    android:lineSpacingExtra="7dp"
                    android:text="第一最好不相见\n如此便可不相恋"
                    android:textColor="#6b58ff"
                    android:textSize="17sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/v_boom_view"
            android:layout_width="210dp"
            android:layout_height="270dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:visibility="gone"
            app:cardBackgroundColor="#e9eaff"
            app:cardCornerRadius="35dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_start_show" />
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/v_show_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_boom_view"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/selector_yellow_button"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:paddingTop="10dp"
            android:text="请开始你的表演"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>