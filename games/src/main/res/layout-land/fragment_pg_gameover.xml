<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/v_pg_gameover_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_pg_score_low" />

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/v_tag1"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/shape_pg_gameover_list_bg"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/v_answer_list"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="38dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/v_tag1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/v_play_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_pg_bt"
                    android:gravity="center_horizontal"
                    android:paddingTop="6dp"
                    android:text="再玩一次"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/v_back_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/v_play_again"
                    android:src="@mipmap/ic_pg_back_home" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/v_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="您总共答对1题"
            android:textColor="@android:color/white"
            android:textSize="28sp" />
    </RelativeLayout>
</LinearLayout>